<p id="notice"><%= notice %></p>

<h1>Awards</h1>

<table>
  <thead>
    <tr>
      <th>Ein</th>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Amount</th>
      <th>Amount GBP</th>
      <th>Purpose</th>
      <th>Filer EIN</th>
      <th>Filename</th>
      <th>Uploaded at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.ein %></td>
        <td><%= award.name %></td>
        <td><%= award.address %></td>
        <td><%= award.city %></td>
        <td><%= award.state %></td>
        <td><%= award.zip %></td>
        <td><%= award.amount %></td>
        <td><%= award.amount_gbp %></td>
        <td><%= award.purpose %></td>
        <td><%= award.filer_ein %></td>
        <td><%= award.filename %></td>
        <td><%= award.uploaded_at %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

